#:kivy 1.0.9
<CustButton@Button>: 
	font_size: 32

# class functions 
# Display points to the entry widget 
<Digit_input>: 
	id: digit_input 
	display: entry 
	rows: 6
	cols: 1
	padding: 10
	spacing: 10

	

	# Where input is displayed 
	BoxLayout: 
		TextInput: 
			id: entry 
			font_size: 32
			multiline: False

	# When buttons are pressed update the entry 
	BoxLayout: 
		spacing: 10
		CustButton: 
			text: "7"
			on_press: entry.text += self.text 
		CustButton: 
			text: "8"
			on_press: entry.text += self.text 
		CustButton: 
			text: "9"
			on_press: entry.text += self.text 

	BoxLayout: 
		spacing: 10
		CustButton: 
			text: "4"
			on_press: entry.text += self.text 
		CustButton: 
			text: "5"
			on_press: entry.text += self.text 
		CustButton: 
			text: "6"
			on_press: entry.text += self.text 

	BoxLayout: 
		spacing: 10
		CustButton: 
			text: "1"
			on_press: entry.text += self.text 
		CustButton: 
			text: "2"
			on_press: entry.text += self.text 
		CustButton: 
			text: "3"
			on_press: entry.text += self.text 

	# When equals is pressed pass text in the entry 
	# to the calculate function 
	BoxLayout: 
		CustButton: 
			font_size: 20
			text: "Enter"
			on_press: entry.text = ""		 
